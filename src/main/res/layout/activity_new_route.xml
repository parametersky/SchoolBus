<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#c3c8c5"
    tools:context="kcc.sorg.schoolbus.Activities.NewRoute">
    <RelativeLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        android:background="@drawable/new_route">
        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:src="@android:drawable/ic_input_delete"/>

    </RelativeLayout>
    <TableLayout
        android:id="@+id/content"
        android:layout_below="@id/head"
        android:layout_marginTop="10dp"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content"
        android:divider="?android:attr/dividerVertical"
        android:dividerPadding="3dp"
        android:showDividers="middle|end">
        <TableRow
            android:layout_marginTop="30dp">
            <TextView
                style="@style/Font.Black"
                android:layout_marginLeft="30dp"
                android:layout_weight="0.5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="上车地点"/>
            <TextView />
            <TextView
                style="@style/Font.Black"
                android:id="@+id/add_take"
                android:layout_marginRight="30dp"
                android:layout_weight="0.5"
                android:lines="1"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:onClick="onClick"
                android:text="请添加 >"/>
        </TableRow>
        <TableRow
            >
            <TextView
                style="@style/Font.Black"
                android:layout_marginLeft="30dp"
                android:layout_weight="0.5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="下车地点"/>
            <TextView />
            <TextView
                style="@style/Font.Black"
                android:id="@+id/add_leave"
                android:layout_marginRight="30dp"
                android:layout_weight="0.5"
                android:lines="1"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:onClick="onClick"
                android:text="请添加 >"/>
        </TableRow>
        <TableRow
            android:layout_marginBottom="30dp">
            <TextView
                style="@style/Font.Black"
                android:layout_marginLeft="30dp"
                android:layout_weight="0.5"
                android:lines="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="上车时间"/>
            <TextView />
            <TextView
                style="@style/Font.Black"
                android:id="@+id/add_time"
                android:layout_marginRight="30dp"
                android:layout_weight="0.5"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:text="请添加 >"
                android:onClick="onClick"
                />
        </TableRow>
    </TableLayout>
    <TextView
        style="@style/Font.Black"
        android:id="@+id/desc"
        android:layout_below="@id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="申请须知\n路线提交后将被后台记录，若同一上车地点 或下车地点被多于10次请求，后台将计算路线，并推送至[新增路线]"
        android:layout_marginTop="10dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:background="#ffffff"
        />

    <TextView
        style="@style/Font.Black"
        android:id="@+id/phone"
        android:layout_below="@id/desc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="客户电话           11111111"
        android:layout_marginTop="10dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:background="#ffffff"
        />
    <TextView
        android:id="@+id/raise"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/green_bg"
        android:layout_gravity="bottom"
        android:gravity="center_horizontal|center_vertical"
        android:text="立即发起"
        android:textColor="#ffffff"
        android:onClick="onClick"
        android:textSize="20sp"/>
</RelativeLayout>
